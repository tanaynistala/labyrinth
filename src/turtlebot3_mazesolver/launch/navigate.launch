<launch>

  <arg name="rviz_arg" default="-d $(find turtlebot_navigation_and_mapping)/rviz/explore.rviz" />
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="world" default="maze1" doc="maze world [maze1, maze2]"/>
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>

  <!-- Turtlebot3 Gazebo -->
  <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_house.launch">
    <arg name="model" value="$(arg model)"/>
    <arg name="x_pos" value="-2.0"/>
  </include>

  <!-- Turtlebot3 Navigation -->
  <include file="$(find turtlebot3_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)"/>
  </include>

  <!-- Turtlebot3 SLAM -->
  <include file="$(find turtlebot3_slam)/launch/turtlebot3_slam.launch">
    <arg name="slam_methods" value="$(arg slam_methods)" />
    <arg name="open_rviz"    value="false" />
  </include>

  <!-- turtlebot3_teleop -->
  <group if="$(arg teleop)">
      <node pkg="turtlebot3_teleop" type="turtlebot3_teleop_key" name="turtlebot3_teleop_keyboard" output="screen"></node>
  </group>
  <!-- <node name="explore" pkg="turtlebot_navigation_and_mapping" type="explore.py" output="screen"/> -->


  <!-- Rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="$(arg rviz_arg)"/>
    
</launch>